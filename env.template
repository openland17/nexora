# Environment Variables Template for Nexora
# Copy this file to .env and fill in your actual values

# Database
# For local development, use SQLite:
# DATABASE_URL="file:./prisma/dev.db"
# For production, use MySQL connection string:
# DATABASE_URL="mysql://user:password@host:3306/database"

DATABASE_URL="file:./prisma/dev.db"

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Stripe Payments
# Get these from https://dashboard.stripe.com
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Mux Video Hosting
# Get these from https://dashboard.mux.com → Settings → API Access Tokens
MUX_TOKEN_ID=...
MUX_TOKEN_SECRET=...

# Resend Email (Optional but recommended)
# Get this from https://resend.com
RESEND_API_KEY=re_...

# App Configuration
# For local development:
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production, update with your actual domain:
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Platform Fee (in basis points, 1500 = 15%)
PLATFORM_FEE_BPS=1500

